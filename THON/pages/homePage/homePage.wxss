/* pages/homePage/homePage.wxss */
.container .banner{
  width: 100%; 
}
.container .banner image{
  width: 100%;
  height: 100%;
}
.content{
  width: 100%;
  background: #fff;
  padding: 54rpx 0;
}
.content .conTop{
  width: 100%;
  position: relative;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.content .conTop .yLine{
  width: 0;
  height: 80rpx;
  border: 1rpx solid #eee;
}
.content .conTop image{
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.content .conTop .conTopLeft,
.content .conTop .conTopRight{
  width: 40%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  padding-left: 64rpx;
}

.conText{
  width: 424rpx;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: absolute;
  top: 180rpx;
  left: 256rpx;
}


.content .conTop>.btn{
  height: 102rpx;
  width: 660rpx;
  font-size: 40rpx;
  margin-top: 138rpx;
  text-align: right;
  padding: 0 20rpx;
  border-radius: 51rpx;
  line-height: 90rpx;
  background-image: url('https://cdn.zeplin.io/5ae32a567422687a8baa89c8/assets/CB5513CB-23D0-4CFC-AC4B-6C171A19FB9C.png');
  background-size: cover;
}
.content .conTop>.btn>image{
  width: 56rpx;
  height: 40rpx;
  margin-left: 20rpx;
  vertical-align: middle;
}
.content .conTop .ad{
  position: absolute;
  width: 128rpx;
  height: 160rpx;
  border: 10rpx solid #fff;
  border-radius: 6rpx;
  top: 148rpx;
  left: 80rpx;
}
.container .adBar{
  height: 122rpx;
  width: 100%;
  text-align: center;
  overflow: hidden;
  margin: 12rpx;
}
.container .adBar>image{
  margin-top: 20rpx;
  width: 392rpx;
  height: 122rpx;
}
/* 评分score */
.score{
  position: absolute;
  height: 28rpx;
  bottom: 40rpx;
  left: 240rpx;
}
.score image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.scoreCode{
  color: #ffcb00;
  font-size: 28rpx; 
  position: absolute;
  bottom: 36rpx;
  right: 260rpx;
}

