/* pages/rankPage/rankPage.wxss */
.container .rankHeader{
  width: 100%;
  height: 90rpx;
  color: #666;
  border-bottom: 2rpx solid #eee;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.container .rankHeader text{
  display: inline-block;
  width: 124rpx;
  height: 88rpx;
  text-align: center;
  line-height: 92rpx;
}
.container .rankHeader text.tapIn{
  color: #32bbf5;
  border-bottom: 2rpx solid #32bbf5;
}

.rankList {
  width: 100%;
  height: 180rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  background: white;
}
.rankList .rankGradLeft {
  width: 92rpx;
  height: 180rpx;
  text-align: center;
  line-height: 120rpx;
}
.rankList .rankGradLeft image{
  margin-top: 57rpx;
  width: 40rpx;
  height: 66rpx;
}
.rankList .rankGradRight{
  margin-left: 28rpx;
  height: 180rpx;
  border-bottom: 2rpx solid #eee;
  box-sizing: border-box;
}
.rankList .rankInfo{
  position: relative;
  top: 30rpx;
  height: 120rpx;
  width: 650rpx;
  
}
.rankList .rankInfo .userInfo{
  width: 146rpx;
  height: 120rpx;
  position: absolute;
  top: 0rpx;
  left: 160rpx;
}
.rankList .rankInfo text.h{
  color: #666;
  width: 146rpx;
  line-height: 32rpx;
}
.rankList .rankInfo .avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.rankList .rankInfo .zan{
  width: 130rpx;
  height: 120rpx;
  position: absolute;
  right: 0;
  top: 0;
  line-height: 120rpx;
}
.rankList .rankInfo .zan .zanIcon{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  margin-top: -26rpx;
  margin-left: rpx;
  top: 50%;
  left: 50%;
}
.rankList .rankInfo .zan .zanIcon image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.rankNo{
  line-height: 156rpx;
}