/* pages/patriarchInfo/patriarchInfo.wxss */
.info{
  width: 100%;
  font-size: 32rpx;
  color: #999;
  position: relative;
}

.infoRow .iconImg{
  width: 90rpx;
  height: 90rpx;
  margin-top: -3rpx;
  border-radius: 50%;
}
.option_box{
  position: absolute;
  top: 90rpx;
  right: 0;
  width: 20%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 10;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  padding: 10rpx;
}
button.jumpOver{
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  line-height: 96rpx;
  font-size: 32rpx;
  padding: 0;
  background: #bbbbbb; 
  position: fixed;
  right:30rpx;
  bottom:60rpx;
  color:#fff;
}
picker{
  width: 78%;
  margin-left: -360rpx;
  text-align: right;
}
picker input{
  padding: 0;
  margin-left: 130rpx;
  text-align: right;
  width: 100%;
}
.picker text{
  text-align: right;
}
