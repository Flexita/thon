/**app.wxss**/
page{
  background: #f5f5f5;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: 32rpx;
} 

/* 行样式 */
.infoRow{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 92rpx;
  padding: 52rpx 30rpx;
  box-sizing: border-box;
  color: #333;
  border-top: 1rpx solid #eee;
  box-shadow: 0 4rpx 8rpx 0 rgba(153,153,153,0.2);
  background: #fff;
}
.infoRow input{
  width: 75%;
  color: #333;
  text-align: right;
}
picker{
  color: #333;
  padding: 0;
  width: 40%;
}
.btn{
  height: 90rpx;
  margin: 40rpx auto;
  width: 88%;
  color: #eee;
  font-size: 36rpx;
  text-align: center;
  line-height: 92rpx;
  border-radius: 45rpx;
  background-image: linear-gradient(to left,#13b8e2,#32bbf5); 
}
/* 书列表卡片样式 */
.bookCard{
  width: 99%;
  height: 220rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  position: relative;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
  background: #fff;
}
.bookCard>image{
  width: 176rpx;
  height: 220rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
}
.bookCard text.h{
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 28rpx;
  margin: 22rpx 0;
}
.bookCard text.h1{
  font-size: 36rpx;
  color: #333;
  line-height: 26rpx;
}
/* Btn小按钮 */
.littleBtn{
  position: fixed;
  bottom: 120rpx;
  right: 0;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  width: 228rpx;
  height: 80rpx;
  padding: 0;
  border: none;
  border-radius: 40rpx 0 0 40rpx;
  box-shadow: 0 2rpx 8rpx 0 rgba(24,185,229,0.5);
  background-image: linear-gradient(to left,#13b8e2,#32bbf5);
}
.h1{
  font-size: 36rpx;
}
.h{
  display: block;
  margin: 20rpx 0;
  color: #333;
}
.checkDate{
  color: #32bbf5;
}
.span{
  font-size: 28rpx;
  color: #999;
}

/* 加载效果 */

.loadmore {
  color: #888;
  font-size: 16px;
  line-height: 100px;
  text-align: center;
}
.loadmore.loading::before {
  content: '';
  width: 40px;
  height: 40px;
  margin-top: -10px;
  margin-right: 10px;
  display: inline-block;
  vertical-align: middle;
  animation: loading 1s steps(12) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

@keyframes loading {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(-360deg);
  }
}

